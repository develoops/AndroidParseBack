<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:id="@+id/Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dip"
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        >



        <TextView
            android:id="@+id/name_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:typeface="sans"
            android:textSize="15dip"
            android:paddingLeft="5dip"
            android:textStyle="bold"
            android:visibility="invisible"


            />

        <TextView
            android:id="@+id/charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="12dip"
            android:paddingLeft="20dip"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@+id/name_speaker"
             />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="12dip"
            android:paddingLeft="20dip"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@+id/charge"
            android:visibility="invisible"
            />

      <!--  <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="12dip"
            android:paddingLeft="20dip"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/charge"

            />-->

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/fav"

            android:layout_alignParentTop="true" />

        <utils.CircularTextView
            android:id="@+id/circularTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/blanco"
            android:layout_toLeftOf="@+id/fav" />





    </RelativeLayout>
</RelativeLayout>