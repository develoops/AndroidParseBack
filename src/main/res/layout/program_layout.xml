<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/rtlayout"
        android:layout_width="match_parent"
        android:layout_height="526dp">

        <RelativeLayout
            android:id="@+id/navi_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true">

            <ImageButton
                android:id="@+id/btnBackDay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/dia_retrocede"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btnNextDay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/dia_avanza"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/dayProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btnNextDay"
                android:layout_toRightOf="@+id/btnBackDay"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="16dip"
                android:textStyle="bold" />

        </RelativeLayout>


        <ListView
            android:id="@+id/commonListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/navi_bar"
            android:divider="#fff"
            android:dividerHeight="0.5dp"
            android:listSelector="#00000000"


            />

    </RelativeLayout>
</LinearLayout>


